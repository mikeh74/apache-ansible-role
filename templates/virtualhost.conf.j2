<VirtualHost *:80>

    ServerAdmin webmaster@localhost
    DocumentRoot {{ item.document_root }}

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined

    <Directory {{ item.document_root }}>
        AllowOverride All
        order allow,deny
        allow from all
    </Directory>

</VirtualHost>
